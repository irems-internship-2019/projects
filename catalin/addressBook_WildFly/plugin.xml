<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="addressbook.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="addressbook.Perspective"
            name="Perspective"
            id="AddressBook_WildFly.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="ui.views.AddressBookView"
            id="addressbook.view.addressbookview_wildfly"
            name="AddressBookView"
            restorable="true">
      </view>
      <view
            class="ui.views.AddressBookDetailsView"
            id="addressbook.view.addressbookdetailsview_wildfly"
            name="AddressBookDetailsView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="addressbook.view.addressbookview_wildfly"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
         <view
               closeable="true"
               id="addressbook.view.addressbookdetailsview_wildfly"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ui.editor.AddressBookEditor"
            default="false"
            id="addressbook.editor.addressbookeditor"
            name="AddressBookEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="AddressBook.viewContribution"
            targetID="addressbook.view.addressbookview">
         <action
               class="ui.actions.DeleteAction"
               enablesFor="1"
               icon="icons/Octagon_delete.svg.png"
               id="deleteAddressBookAction"
               label="Delete"
               style="push"
               toolbarPath="additions"
               tooltip="Delete">
         </action>
         <action
               class="ui.actions.EditAction"
               enablesFor="1"
               icon="icons/descÄƒrcare.png"
               id="editAddressBookAction"
               label="Edit"
               style="push"
               toolbarPath="additions"
               tooltip="Edit">
         </action>
         <action
               class="ui.actions.AddAction"
               icon="icons/add-clipart-to-photos.png"
               id="addAddressBookAction"
               label="Add"
               style="push"
               toolbarPath="additions"
               tooltip="Add">
         </action>
      </viewContribution>
   </extension>

</plugin>
