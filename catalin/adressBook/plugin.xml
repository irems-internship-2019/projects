<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="addressbook.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="addressbook.Perspective"
            name="Perspective"
            id="AddressBook.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="addressbook.view.AddressBookView"
            id="addressbook.view.addressbookview"
            name="AddressBookView"
            restorable="true">
      </view>
      <view
            class="addressbook.view.AddressBookDetailsView"
            id="addressbook.view.addressbookdetailsview"
            name="AddressBookDetailsView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="addressbook.view.addressbookview"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
         <view
               closeable="true"
               id="addressbook.view.addressbookdetailsview"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:addressbook.view.addressbookview">
         <command
               commandId="addressbook.command.addcontact"
               icon="icons/add-clipart-to-photos.png"
               label="Add"
               style="push"
               tooltip="Add">
         </command>
         <command
               commandId="addressbook.command.editcontact"
               icon="icons/descÄƒrcare.png"
               label="Edit"
               style="push"
               tooltip="Edit">
         </command>
         <command
               commandId="addressbook.command.deletecontact"
               icon="icons/Octagon_delete.svg.png"
               label="Delete"
               style="push"
               tooltip="Delete">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="addressbook.editor.AddressBookEditor"
            default="false"
            id="addressbook.editor.addressbookeditor"
            name="AddressBookEditor">
      </editor>
      <editor
            class="addressbook.editor.AddContact"
            default="false"
            id="addressbook.editor.addcontact"
            name="AddContact">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="addressbook.command.AddContactHandler"
            id="addressbook.command.addcontact"
            name="AddContactHandler">
      </command>
      <command
            defaultHandler="addressbook.command.EditContactHandler"
            id="addressbook.command.editcontact"
            name="EditContactHandler">
      </command>
      <command
            defaultHandler="addressbook.command.DeleteContactHandler"
            id="addressbook.command.deletecontact"
            name="DeleteContactHandler">
      </command>
   </extension>

</plugin>
